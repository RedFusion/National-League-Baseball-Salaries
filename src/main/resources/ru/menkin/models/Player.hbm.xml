<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.menkin.models.Player" table="players">
        <meta attribute="class-description">
            This class contains the user detail.
        </meta>
        <id name="id" type="int" column="uid">
            <generator class="identity"/>
        </id>
        <many-to-one fetch="join" lazy="false" name="team" column="team_id" class="ru.menkin.models.Team" cascade="all"/>
        <property name="name" column="name" type="string"/>
        <property name="salary" column="salary" type="string"/>
        <property name="position" column="position" type="string"/>

    </class>
</hibernate-mapping>